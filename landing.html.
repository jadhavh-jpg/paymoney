<body>
<div class="card">
<h1 id="brand"></h1>
<img id="img">
<h2 id="title"></h2>
<p id="desc"></p>
<p><b id="dt"></b> â€¢ <span id="mode"></span></p>

<button class="btn upi" onclick="openUPI()">Open UPI App</button>
<button class="btn qr" onclick="showQR()">Scan QR</button>
<button class="btn wa" onclick="shareWA()">Share WhatsApp</button>
</div>

<script>
const q=new URLSearchParams(location.search);
brand.innerText=q.get("brand");
title.innerText=q.get("title");
desc.innerText=q.get("desc");
img.src=q.get("img");
dt.innerText=q.get("dt");
mode.innerText=q.get("mode");

function openUPI(){
 location.href=`upi://pay?pa=${q.get("upi")}&am=${q.get("amt")}&cu=INR`;
}
function showQR(){
 window.open(`https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=upi://pay?pa=${q.get("upi")}&am=${q.get("amt")}`);
}
function shareWA(){
 window.open(`https://wa.me/?text=${encodeURIComponent(location.href)}`);
}
</script>
