<body>

<div class="card">
  <img id="img" class="hero">
  <h2 id="title">Payment</h2>
  <p id="desc">Please complete payment</p>
  <div class="amount" id="amount"></div>

  <button class="btn pay" id="payBtn">Open UPI App</button>
  <button class="btn wa" id="waBtn">Share on WhatsApp</button>
  <button class="btn copy" id="copyBtn">Copy Link</button>

  <div class="qr">
    <img id="qrImg">
    <div class="note">Scan QR if UPI app doesn’t open</div>
  </div>
</div>

<script>
const p = new URLSearchParams(location.search);

const title = p.get("title") || "Payment";
const desc  = p.get("desc") || "Please complete payment";
const amount = p.get("amount");
const upi = p.get("upi");
const img = p.get("img");

if(!upi || !amount){
  document.body.innerHTML = "<h3 style='text-align:center'>Invalid or expired link</h3>";
}

document.getElementById("title").innerText = title;
document.getElementById("desc").innerText = desc;
document.getElementById("amount").innerText = "₹ " + amount;

if(img){
  const i = document.getElementById("img");
  i.src = img;
  i.style.display = "block";
}

const upiLink = `upi://pay?pa=${upi}&am=${amount}&cu=INR&pn=${encodeURIComponent(title)}`;

// Pay button
document.getElementById("payBtn").onclick = () => {
  location.href = upiLink;
};

// QR
document.getElementById("qrImg").src =
  "https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=" +
  encodeURIComponent(upiLink);

// WhatsApp share
document.getElementById("waBtn").onclick = () => {
  const msg = `*${title}*\n${desc}\nAmount: ₹${amount}\n\nPay here:\n${location.href}`;
  window.open(`https://wa.me/?text=${encodeURIComponent(msg)}`);
};

// Copy link
document.getElementById("copyBtn").onclick = async () => {
  await navigator.clipboard.writeText(location.href);
  alert("Link copied");
};
</script>

</body>
</html>
