<body>

<div class="box">
  <img id="img">
  <h2 id="title"></h2>
  <p id="desc"></p>
  <div class="pay" onclick="pay()">Pay ₹<span id="amt"></span></div>
  <canvas id="qr"></canvas>
</div>

<script>
const q = new URLSearchParams(location.search);
const data = JSON.parse(sessionStorage.getItem("pm_"+q.get("id")));

img.src = data.img;
title.innerText = data.title;
desc.innerText  = data.desc;
amt.innerText   = data.amt;

const upi = `upi://pay?pa=${data.upi}&am=${data.amt}&cu=INR`;

QRCode.toCanvas(qr, upi);

function pay(){
  location.href = upi;
}
</script>

