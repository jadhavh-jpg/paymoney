<script>
const id=new URLSearchParams(location.search).get("id");
const d=JSON.parse(localStorage.getItem(id));
if(!d){document.body.innerHTML="404 NOT FOUND";}

img.src=d.img;
brand.innerText=d.brand;
title.innerText=d.title;
desc.innerText=d.desc;
time.innerText=d.time;

const upiURL=`upi://pay?pa=${d.upi}&pn=${encodeURIComponent(d.brand)}&am=${d.amount}&cu=INR`;

function openUPI(){location.href=upiURL;}
function showQR(){window.open("https://api.qrserver.com/v1/create-qr-code/?size=300x300&data="+encodeURIComponent(upiURL));}
function copy(){navigator.clipboard.writeText(location.href);alert("Link copied");}
function share(){
  location.href=`https://wa.me/?text=${encodeURIComponent(location.href)}`;
}
</script>

