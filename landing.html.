    <label>Poster Image *</label>
    <input type="file" id="poster" accept="image/*">

    <input id="title" placeholder="Title">
    <textarea id="desc" placeholder="Description"></textarea>
    <input id="upi" placeholder="UPI ID">
    <input id="amount" type="number" placeholder="Amount (â‚¹)">

    <button class="primary" onclick="generate()">Generate Page</button>
  </div>

  <div class="card">
    <h2>Live Preview</h2>
    <div class="preview-card">
      <img id="pImg" src="https://via.placeholder.com/400x600?text=Poster">
      <div class="preview-body">
        <h3 id="pTitle">Title</h3>
        <p id="pDesc">Description</p>
        <button class="green">Register Now</button>
      </div>
    </div>
  </div>

