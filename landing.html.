<script>
/* ================= CLOUDINARY CONFIG ================= */
const CLOUD_NAME = "ddusj34vn";          // tumhara cloud name
const UPLOAD_PRESET = "paymoney_unsigned";

let posterURL="", upiLink="";

/* ================= LIVE PREVIEW ================= */
poster.onchange = async ()=>{
  const file = poster.files[0];
  posterURL = await uploadImage(file);
  pImg.src = posterURL;
};

title.oninput = ()=>pTitle.innerText = title.value || "Title";
desc.oninput  = ()=>pDesc.innerText  = desc.value  || "Description";

/* ================= UPLOAD ================= */
async function uploadImage(file){
  const fd = new FormData();
  fd.append("file", file);
  fd.append("upload_preset", UPLOAD_PRESET);

  const res = await fetch(
    `https://api.cloudinary.com/v1_1/${CLOUD_NAME}/image/upload`,
    { method:"POST", body:fd }
  );
  const data = await res.json();
  return data.secure_url;
}

/* ================= GENERATE ================= */
function generate(){
  if(!posterURL || !upi.value || !amount.value){
    alert("Poster, UPI & Amount required");
    return;
  }

  upiLink = `upi://pay?pa=${encodeURIComponent(upi.value)}&am=${amount.value}&cu=INR`;

  // fill landing
  lImg.src   = posterURL;
  lTitle.innerText = title.value;
  lDesc.innerText  = desc.value;

  // switch view
  builder.classList.add("hidden");
  landing.classList.remove("hidden");
}

/* ================= PAYMENT ================= */
function openUPI(){
  location.href = upiLink;
  setTimeout(showQR,1200);
}

function showQR(){
  qrBox.innerHTML="";
  QRCode.toCanvas(document.createElement("canvas"),upiLink,{width:220},
    (e,c)=>qrBox.appendChild(c)
  );
}

/* ================= SHARE ================= */
function shareWA(){
  const text = `Pay here:\n${upiLink}`;
  window.open("https://wa.me/?text="+encodeURIComponent(text));
}
</script>

