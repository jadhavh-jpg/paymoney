<script>
// ðŸ”‘ Read data from URL
const p = new URLSearchParams(window.location.search);

const poster = p.get("poster");
const brand  = p.get("brand");
const title  = p.get("title");
const dt     = p.get("dt");
const desc   = p.get("desc");
const upi    = p.get("upi");
const amount = p.get("amount");

// Fill UI
if(poster) img.src = poster;
brand && (document.getElementById("brand").innerText = brand);
title && (document.getElementById("title").innerText = title);
dt && (document.getElementById("dt").innerText = dt);
desc && (document.getElementById("desc").innerText = desc);

// PAY BUTTON â€“ REAL WORKING
document.getElementById("payBtn").onclick = ()=>{
  if(!upi || !amount){
    alert("Payment details missing");
    return;
  }
  const upiLink =
    `upi://pay?pa=${upi}&am=${amount}&cu=INR&tn=PayMoney`;
  window.location.href = upiLink;
};
</script>

