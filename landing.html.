<script>
const q=new URLSearchParams(location.search);
brand.innerText=q.get("brand");
title.innerText=q.get("title");
desc.innerText=q.get("desc");
time.innerText=q.get("time");
mode.innerText="Mode: "+q.get("mode");
img.src=q.get("img");

const upi=`upi://pay?pa=${q.get("upi")}&am=${q.get("amt")}&cu=INR`;

function openUPI(){location.href=upi}
function showQR(){qr.innerHTML="";QRCode.toCanvas(upi,{width:220},(_,c)=>qr.appendChild(c))}
function copyLink(){navigator.clipboard.writeText(location.href);alert("Link copied")}
function shareWA(){window.open("https://wa.me/?text="+encodeURIComponent(location.href))}
</script>

